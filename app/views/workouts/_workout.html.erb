<div id="<%= dom_id workout %>"
    data-id="<%= workout.id %>"
    class='workout'
    data-selected="false"
    data-action="click->workout#toggleSelected">
  <div class='info'>
    <div class='timestamp'><%= workout.start_time.strftime('%-m/%-d/%y @%-I:%M%P') %></div>
    <div class='duration'><%= Time.at(workout.duration).utc.strftime('%-Hh:%Mm:%Ss') %></div>
    <div class='distance'><%= workout.distance %></div>
  </div>
  <div class='controls'>
    <%= link_to '🔍', workout_path(workout) %>
    <%= link_to '✏️', edit_workout_path(workout) %>
    <%= link_to '🗑️', workout, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
