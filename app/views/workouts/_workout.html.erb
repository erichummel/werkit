<div id="<%= dom_id workout %>" class='workout' data-controller='workout'>
  <div>
    <strong>User:</strong>
    <%= workout.user.email %>
  </div>

  <div>
    <strong>Data file:</strong>
    <%=
    begin
      link_to workout.data_file.name, rails_blob_path(workout.data_file)
    rescue Exception => e
      binding.pry
    end
    %>
  </div>

  <div>
    <strong>Created at:</strong>
    <%= workout.created_at %>
  </div>

  <div>
    <strong>Updated at:</strong>
    <%= workout.updated_at %>
  </div>

  <div>
    <%= link_to 'Show', workout %>
    <%= link_to 'Edit', edit_workout_path(workout) %>
    <%= link_to 'Destroy', workout, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>

  <% if include_map %>
    <div class='map' id="workout-map" data-action="turbo:load@document->workout#initializeMap"></div>
  <% end %>
</div>

<%= javascript_tag do %>
  window.workoutJSON = <%= raw workout.to_json %>;
<% end %>
